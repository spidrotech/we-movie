{% extends 'base.html.twig' %}

{% block title %}Home - FlixNow{% endblock %}

{% block content %}
<h2>Best Movie</h2>
<div id="best-movie">
    <h3>{{ bestMovie.title }}</h3>
    <p>{{ bestMovie.overview }}</p>
    <button data-movie-id="{{ bestMovie.id }}">View Details</button>
</div>

<h2>Movies by Genre</h2>
<div id="movies-list">
    <!-- Movies will be dynamically loaded based on genre selection -->
</div>

<div id="movie-details-popup" style="display:none;">
    <h3>Movie Details</h3>
    <div id="movie-details-content"></div>
    <button id="close-popup">Close</button>
</div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/movie.js') }}" defer></script>
{% endblock %}
